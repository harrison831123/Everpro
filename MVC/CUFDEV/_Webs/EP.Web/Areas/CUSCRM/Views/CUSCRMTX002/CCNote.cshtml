    }

    .CreateTime {
        FONT-SIZE: 12pt;
        FONT-FAMILY: "標楷體";
        FONT-WEIGHT: normal;
        COLOR: #000000
    }

    .NoteTitle {
        FONT-SIZE: 20pt;
        FONT-FAMILY: "標楷體";
        FONT-WEIGHT: normal;
        COLOR: #000000
    }

    .NoteTitle2 {
        FONT-SIZE: 18pt;
        FONT-FAMILY: "標楷體";
        FONT-WEIGHT: normal;
        COLOR: #000000
    }

    .Word {
        FONT-SIZE: 13pt;
        FONT-FAMILY: "標楷體";
